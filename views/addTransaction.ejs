<!-- add-transaction.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Transaction</title>
    <link rel="stylesheet" href="styles.css"> <!-- Add your CSS file -->
</head>
<body>
    <h1>Add Transaction</h1>
    <form id="add-transaction-form">
        <label for="amountGiven">Amount Given:</label>
        <input type="number" id="amountGiven" name="amountGiven" required>

        <label for="orNumber">OR Number:</label>
        <input type="number" id="orNumber" name="orNumber" required>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required>

        <label for="total">Total:</label>
        <input type="number" id="total" name="total" required>

        <label for="purchaser">Purchaser:</label>
        <input type="text" id="purchaser" name="purchaser" required>

        <label for="employeeId">Employee ID:</label>
        <input type="number" id="employeeId" name="employeeId" required>

        <label for="personalContributions">Personal Contributions:</label>
        <input type="text" id="personalContributions" name="personalContributions">

        <label for="storeName">Store Name:</label>
        <input type="text" id="storeName" name="storeName" required>

        <label for="receipts">Receipts:</label>
        <input type="file" id="receipts" name="receipts">

        <button type="submit">Add Transaction</button>
    </form>

    <script>
        document.getElementById('add-transaction-form').addEventListener('submit', async function (event) {
            event.preventDefault(); // Prevent form from submitting normally

            const formData = new FormData(this); // Create a FormData object to handle file uploads

            const response = await fetch('/api/transactions', {
                method: 'POST',
                body: formData,
            });

            const result = await response.json();
            alert(result.message);
        });
    </script>
</body>
</html>
